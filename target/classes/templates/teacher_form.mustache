<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Alta de profesor</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { darkMode: 'class' }; 
    
        if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark')
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 flex items-center justify-center min-h-screen p-4 transition-colors duration-300">
    
    <!-- Tarjeta principal: blanco en día, gris oscuro (800) en noche -->
    <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md border border-gray-200 dark:border-gray-700">
        
        <h1 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-6">Alta de profesor</h1>

        {{#successMessage}}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{successMessage}}</span>
        </div>
        {{/successMessage}}

        {{#errorMessage}}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{errorMessage}}</span>
        </div>
        {{/errorMessage}}

        <form action="/teacher/new" method="post" class="space-y-4">
            <div>
                <label for="firstname" class="block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1">Nombre:</label>
                <input type="text" id="firstname" name="firstname" required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
            </div>
            <div>
                <label for="lastname" class="block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1">Apellido:</label>
                <input type="text" id="lastname" name="lastname" required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
            </div>
            <div>
                <label for="dni" class="block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1">DNI:</label>
                <input type="number" id="dni" name="dni" required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
            </div>
            <div>
                <label for="email" class="block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1">E-mail:</label>
                <input type="text" id="email" name="email" required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
            </div>
            <div>
                <label for="degree" class="block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1">Grado:</label>
                <select id="degree" name="degree" required
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                    <option value="" disabled selected class="text-gray-500">Seleccione una opción...</option>
                    <option value="BACHILLERATO">BACHILLERATO</option>
                    <option value="TECNICATURA">TECNICATURA</option>
                    <option value="PROFESORADO">PROFESORADO</option>
                    <option value="LICENCIATURA">LICENCIATURA</option>
                    <option value="MAESTRIA">MAESTRÍA</option>
                    <option value="DOCTORADO">DOCTORADO</option>
                    <option value="OTRO">OTRO</option>
                </select>
            </div>
            <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                Registrar Profesor
            </button>
            <div class="text-center mt-4">
                <a href="/dashboard" class="text-blue-600 dark:text-blue-400 hover:underline text-sm">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>